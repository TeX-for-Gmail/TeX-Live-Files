def paraIplusII (suffix $)=
    pickup para_pen;
    z$a = z$ + (2hu, 0);
    z$b = z$ + (0, 2vu);
    z$c = z$a + (0, 4vu);
    z$d = z$b + (4hu, 0);
    %sertodot(8, 1);
    drawdot z$a;
    drawdot z$b;
    drawdot z$c;
    drawdot z$d;
    penlabels($a, $b, $c, $d);
enddef;

