def wawcommon (suffix $) =
    pickup serto_pen;
    bot z$a = (x$ + 2hu, y$);
    lft z$b = (x$, y$ + 2vu);
    top z$c = (x$a, y$ + 5vu);
    rt z$d = (x$ + 4hu, y$ + 2vu);
    draw z$a..z$b..z$c..z$d..cycle;

    penlabels($a, $b, $c, $d);
enddef;


