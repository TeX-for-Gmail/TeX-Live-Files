def iodhcommon (expr xoffs) =
    z1 = (xoffs, .5(vu-basestroke)); 
    z2 = (x1, .5(vu+basestroke));
    z21 = (x1-1hu, y2);
    z3 = (x1+hu, 2.5basestroke);
    z4 = (x1+2hu, y2);
    z5 = (x1+2.2hu, .5vu);
    z6 = (x1+1.5hu, y1);

    fill z1--z21{right}..z3--z4{z4-z3} % ..z5{down}
           ..{left}z6--cycle;

    penlabels(range 1 thru 21);
